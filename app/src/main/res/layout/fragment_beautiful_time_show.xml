<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7727b7d7"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="什么都没有,快去添加吧"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:id="@+id/textView" />

    <com.qiu.beautifultime.tools.MyViewPager
        android:id="@+id/beautiful_time_show_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/LlEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/background_dark"
            android:scaleType="center"
            android:src="@mipmap/icon_edit_normal" />

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="#8000BFFF"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LlDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LlEdit"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/background_dark"
            android:scaleType="center"
            android:src="@mipmap/icon_download_normal" />

        <TextView
            android:id="@+id/tvDownload"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#8000BFFF"
            android:gravity="center"
            android:text="下载"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LlDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LlDownload"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/background_dark"
            android:scaleType="center"
            android:src="@mipmap/icon_delete_normal" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#8000BFFF"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LlNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LlDelete"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/background_dark"
            android:scaleType="center"
            android:src="@mipmap/list_icon_plus" />

        <TextView
            android:id="@+id/tvNew"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#8000BFFF"
            android:gravity="center"
            android:text="新建"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:id="@+id/llReturn">
        <ImageView
            android:layout_gravity="center"
            android:background="@mipmap/detail_icon_list_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
           android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="最美时光"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />
    </LinearLayout>





</RelativeLayout>