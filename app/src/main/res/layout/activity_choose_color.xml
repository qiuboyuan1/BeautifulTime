<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/choose_color_title_ll"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/choose_color_titles_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/choose_color_back_iv_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@mipmap/days_common_icon_back_normal" />

        <ImageButton
            android:id="@+id/choose_color_ok_iv_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@mipmap/days_common_icon_finish_normal" />

    </RelativeLayout>

    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/choose_color_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_color_title_ll"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <com.larswerkman.holocolorpicker.SVBar
        android:id="@+id/choose_color_sv_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_color_picker"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

    <com.larswerkman.holocolorpicker.OpacityBar
        android:id="@+id/choose_color_opacity_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_color_sv_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

    <com.larswerkman.holocolorpicker.SaturationBar
        android:id="@+id/choose_color_saturation_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_color_opacity_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

    <com.larswerkman.holocolorpicker.ValueBar
        android:id="@+id/choose_color_value_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_color_saturation_bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

</RelativeLayout>